{
  "alex.enable": true,
  "breadcrumbs.enabled": true,
  "cSpell.ignoreRegExpList": [
    "&\\w+;",
    "[A-Z]{3}\\w*"
  ],
  "cSpell.language": "en-GB",
  "cSpell.userWords": [
    "apps",
    "dotenv",
    "dxw",
    "dxw's",
    "firefox",
    "linting",
    "nodenv",
    "prerender",
    "remortgage",
    "screenshot",
    "spec",
    "stateful",
    "todos",
    "toolset",
    "zeit"
  ],
  "debug.inlineValues": true,
  "editor.autoIndent": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.cursorSurroundingLines": 3,
  "editor.dragAndDrop": false,
  "editor.fontFamily": "'Fira Mono', monospace",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80
  ],
  "editor.suggest.localityBonus": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.autoReveal": false,
  "files.associations": {
    "*.js.erb": "javascript"
  },
  "files.hotExit": "onExitAndWindowClose",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.fileHistory.location": "explorer",
  "gitlens.views.lineHistory.location": "explorer",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.proseWrap": "always",
  "ruby.codeCompletion": "rcodetools",
  "ruby.format": "rubocop",
  "ruby.intellisense": false,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.lintDebounceTime": 1500,
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "search.location": "panel",
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "'Fira Mono for Powerline', 'Fira Mono', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "all",
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.colorTheme": "Neon Verdigris",
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.openPositioning": "last",
  "workbench.quickOpen.preserveInput": true,
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
