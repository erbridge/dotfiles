{
  "alex.enable": true,
  "breadcrumbs.enabled": true,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "svelte",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],
  "cSpell.ignorePaths": [
    "**/*-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    "**/*.lock"
  ],
  "cSpell.language": "en-GB",
  "cSpell.userWords": [
    "anymore",
    "apps",
    "checkbox",
    "chrono",
    "clearfix",
    "color",
    "datetime",
    "deadname",
    "deadnames",
    "deadnaming",
    "dedupe",
    "dotenv",
    "dxw's",
    "dxw",
    "erbridge",
    "figcaption",
    "firefox",
    "followup",
    "govuk",
    "hgroup",
    "hydratable",
    "linting",
    "meridiem",
    "nodenv",
    "placeholder",
    "playbook",
    "prerender",
    "remortgage",
    "rgba",
    "screenshot",
    "spec",
    "stateful",
    "submittable",
    "surprizingly",
    "testbed",
    "todos",
    "toolset",
    "typeof",
    "unsurprizingly",
    "webchat",
    "weeknote",
    "weeknotes",
    "zeit"
  ],
  "debug.inlineValues": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": ["source.organizeImports", "source.fixAll"],
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorSurroundingLines": 3,
  "editor.dragAndDrop": false,
  "editor.fontFamily": "'Fira Mono', monospace",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabSize": 2,
  "editor.unfoldOnClickAfterEndOfLine": true,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,
  "files.associations": {
    "*.js.erb": "javascript",
    "*.sveltemd": "markdown",
    ".env.defaults": "dotenv"
  },
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.hotExit": "onExitAndWindowClose",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "gdscript_formatter.line_size": 80,
  "gitlens.advanced.fileHistoryFollowsRenames": true,
  "gitlens.codeLens.enabled": false,
  "grammarly.userWords": [
    "bootcamps",
    "dxw",
    "open source",
    "orgs",
    "surprizingly",
    "unsurprizingly",
    "weeknote",
    "weeknotes"
  ],
  "grammarly.audience": "general",
  "grammarly.dialect": "british",
  "grammarly.domain": "technical",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.proseWrap": "always",
  "problems.showCurrentInStatus": true,
  "ruby.codeCompletion": false,
  "ruby.format": "standard",
  "ruby.intellisense": false,
  "ruby.lint": {
    "standard": {
      "useBundler": true
    }
  },
  "ruby.lintDebounceTime": 1500,
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "rust-client.rustupPath": "~/.cargo/bin/rustup",
  "rust.clippy_preference": "on",
  "scm.inputFontFamily": "editor",
  "search.searchEditor.doubleClickBehaviour": "openLocationToSide",
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "shellcheck.customArgs": ["-x"],
  "shellcheck.enableQuickFix": true,
  "shellcheck.executablePath": "/usr/local/bin/shellcheck",
  "shellcheck.useWorkspaceRootAsCwd": true,
  "tabnine.experimentalAutoImports": true,
  "task.saveBeforeRun": "prompt",
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "'Fira Mono for Powerline', 'Fira Mono', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "terraform.languageServer": {
    "external": true,
    "args": ["serve"]
  },
  "testExplorer.addToEditorContextMenu": true,
  "testExplorer.showOnRun": true,
  "todo-tree.highlights.enabled": true,
  "todo-tree.tree.showScanModeButton": false,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.autoDetectColorScheme": true,
  "window.newWindowDimensions": "maximized",
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.colorTheme": "Neon Verdigris",
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.splitSizing": "split",
  "workbench.enableExperiments": false,
  "workbench.list.keyboardNavigation": "filter",
  "workbench.preferredDarkColorTheme": "Neon Verdigris",
  "workbench.quickOpen.preserveInput": true,
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true,
  "[arm-template]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /**
   * Cleaner UI
   */
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true
}
