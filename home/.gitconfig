[alias]
	amend = commit --amend
	fixup = commit --fixup
	forcepush = push --force-with-lease
	pair = !git-pair
	patch = !git add --intent-to-add $(git rev-parse --show-toplevel) && git add --patch
	solo = !git-solo

[core]
	editor = nano -r 72
	excludesFile = ~/.gitignore
	hooksPath = ~/.githooks

[commit]
	verbose = true

[diff]
	algorithm = patience
	indentHeuristic = true
	mnemonicPrefix = true
	renames = copies

[fetch]
	prune = true
	pruneTags = true

[interactive]
	singleKey = true

[log]
	abbrevCommit = true

[pull]
	rebase = merges

[rebase]
	abbreviateCommands = true
	autoSquash = true
	autoStash = true
	missingCommitsCheck = warn
	stat = true

[remote]
	pushDefault = origin

[status]
	branch = true
	relativePaths = false
	short = true

[stash]
	showPatch = true

[transfer]
	fsckObjects = true

[user]
	useConfigOnly = true

[include]
	path = ~/.gitconfig.local
